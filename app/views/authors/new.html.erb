<h1>Create a new author</h1>

<%= form_for :author, url: authors_path do | f | %>
    <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </p>

    <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </p>

    <p>
        <%= f.label :homepage %>
        <%= f.text_field :homepage %>
    </p>

    <p>
        <%= f.submit "Create Author" %>
    </p>
<% end %>
