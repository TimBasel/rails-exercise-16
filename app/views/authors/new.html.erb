<h1>Create a new author</h1>

<%= form_for :author do | f | %>
    <p>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </p>

    <p>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </p>

    <p>
        <%= f.label :homepage %>
        <%= f.text_field :homepage %>
    </p>
<% end %>
