<h1>List of Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th>Link</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to "Show", author %></td>
      <td><%= link_to "Edit", edit_author_path(author) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add author", new_author_path %>
